@page "/automation"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Elevation="4" Class="p-4">
        <MudText Typo="Typo.h4" GutterBottom="true">Automation and Control Systems</MudText>
        <MudText Typo="Typo.body1">
            Exxerpro Solutions offers advanced automation and control systems designed to increase productivity and efficiency. Our solutions are tailored to meet the specific needs of your industrial processes.
        </MudText>
        <MudText Typo="Typo.h6" GutterBottom="true" Class="mt-4">Our Services Include:</MudText>
        <MudList T="string">
            <MudListItem Text="PLC Programming" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="SCADA Systems" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="HMI Design" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="Robotics Integration" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
        </MudList>
        <MudText Typo="Typo.body1" Class="mt-4">
            Our team of experts ensures seamless integration and optimal performance of all automation systems, driving efficiency and productivity in your operations.
        </MudText>
    </MudPaper>
</MudContainer>

<style>
    .mt-4 {
        margin-top: 1rem;
    }
</style>