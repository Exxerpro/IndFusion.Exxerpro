@page "/data-storage"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Elevation="4" Class="p-4">
        <MudText Typo="Typo.h4" GutterBottom="true">Data Storage and Reporting Systems</MudText>
        <MudText Typo="Typo.body1">
            At Exxerpro Solutions, we offer robust data storage and reporting systems to ensure your data is secure, accessible, and actionable.
        </MudText>
        <MudText Typo="Typo.h6" GutterBottom="true" Class="mt-4">Our Solutions Include:</MudText>
        <MudList T="string">
            <MudListItem Text="Cloud Storage Solutions" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="Data Warehousing" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="Real-Time Reporting" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
            <MudListItem Text="Data Analytics" Icon="@Icons.Material.Filled.CheckCircle"></MudListItem>
        </MudList>
        <MudText Typo="Typo.body1" Class="mt-4">
        Our data storage and reporting solutions are designed to provide you with the insights you need to make informed decisions and drive business success.
        </MudText>
    </MudPaper>
</MudContainer>

<style>
        .mt-4 {
            margin-top: 1rem;
        }
    </style>